{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"ESNext"
		],
		"moduleDetection": "force",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": [
			"node"
		],
		"noEmit": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
	},
	"include": [
		"**/*.ts",
		"eslint.config.ts"
	]
}